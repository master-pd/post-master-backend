{
  "name": "post-master-backend",
  "version": "1.0.0",
  "description": "Post-Master Pro Backend - Production Ready",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "prod": "NODE_ENV=production pm2 start ecosystem.config.js",
    "stop": "pm2 stop all",
    "restart": "pm2 restart all",
    "logs": "pm2 logs",
    "test": "NODE_ENV=test jest --coverage --forceExit",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:e2e": "NODE_ENV=test jest tests/e2e --forceExit",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "security": "npm audit && npx nodejsscan",
    "migrate:up": "node scripts/migrations/up.js",
    "migrate:down": "node scripts/migrations/down.js",
    "seed": "node scripts/seed.js",
    "health": "node scripts/health-check.js",
    "deploy": "bash scripts/deploy.sh"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "express-mongo-sanitize": "^2.2.0",
    "xss-clean": "^0.1.4",
    "hpp": "^0.2.3",
    "express-validator": "^7.0.1",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "pg": "^8.11.3",
    "ioredis": "^5.3.2",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "multer": "^2.0.2",
    "cloudinary": "^2.0.1",
    "socket.io": "^4.7.2",
    "nodemailer": "^7.0.11",
    "validator": "^13.11.0",
    "uuid": "^9.0.1",
    "axios": "^1.5.1",
    "joi": "^17.10.2",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "sharp": "^0.33.1",
    "swagger-ui-express": "^5.0.0",
    "swagger-jsdoc": "^6.2.8",
    "pm2": "^6.0.14"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.51.0",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "prettier": "^3.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0"
  }
}